<p><%= link_to "Back to my products", user_products_path(params[:user_id]) %></p>
<p><%= link_to "Edit this product", edit_user_product_path(params[:user_id], params[:id]) %></p>

<h1><%= @product.name %></h1>

<img src=<%= @product.photo_url %>>

<p><em><%= @product.description %></em></p>
<p><strong>Price:</strong> <%= to_money(@product.price) %></p>
<p><strong>Category:</strong>
  <%= @categories.map(&:name).join(', ') %>
</p>

<p><%= link_to "See all reviews", product_reviews_path(@product.id) %></p>