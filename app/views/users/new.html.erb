<h1>Sign up for DITzy!</h1>
<% if @new_user.errors.any? %>
  <div class="errors">
    <h2> Bwoken. :( </h2>
    <ul>
      <% @new_user.errors.each do |attribute, message| %>
        <li><strong><%= attribute %></strong>: <%= message %></li>
      <% end %>
    </ul>
  </div>  
<% end %>

<%= form_for @new_user, :url => users_path do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
