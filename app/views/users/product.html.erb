<h3> Products List </h3>
<table class="table table-striped table-hover table-users">

<%= link_to "Add New Product", new_product_path(user_id: @user.id) %>

<thead>
  <tr>
    <th class= "hidden-phone">Name</th>
    <th>Image</th>
    <th>Description</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Status</th>
    <th>Edit</th>
  </tr>
</thead>

<tbody>
  <% @products_by_user.each do |product| %>
    <tr>
    <td class="hidden-phone">
      <%= product.name %>
    </td>
    <td>
      <%= image_tag (product.image) %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= "$#{product.price/100.00}" %>
    </td>
    <td>
      <%= product.stock%>
    </td>
    <td>
      <%= product.status%>
    </td>
    <td>
     <%= link_to "", "/products/#{product.id}/edit"(user_id: product.id), class:"glyphicon glyphicon-pencil", alt: "Edit Product" %>
    </td>
  </tr>
  <%end%>
</tbody>

</table>
