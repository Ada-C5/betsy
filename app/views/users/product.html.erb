<h3> Products List </h3>
<table class="table table-striped table-hover table-users">

<%= link_to "Add New Product", new_product_path(user_id: @user.id), class: "fancylink" %>

<% if @products_by_user.present? %>
<thead>
  <tr>
    <th class= "hidden-phone">Name</th>
    <th>Image</th>
    <th>Description</th>
    <th>Price</th>
    <th>Categories</th>
    <th>Stock</th>
    <th>Status</th>
    <th>Edit</th>
  </tr>
</thead>

<tbody>
  <% @products_by_user.each do |product| %>
    <tr>
    <td class="hidden-phone">
      <%= product.name %>
    </td>
    <td>
      <%= image_tag(product.image, height: 100, width: 100) %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= "$#{product.price/100.00}" %>
    </td>
    <td>
      <% product.categories.each do |category| %>
        <%= category.name %>
        <% unless category == product.categories.last %>
          ,
        <% end %>
      <% end %>
    </td>
    <td>
      <%= product.stock%>
    </td>
    <td>
      <%= product.status%>
    </td>
    <td>
     <%= link_to "", "/products/#{product.id}/edit", class:"glyphicon glyphicon-pencil", alt: "Edit Product" %>
    </td>
  </tr>
  <%end%>
</tbody>

</table>

<% else %>
<br><br>
<%= "No products yet. Why not add some?" %>
<% end %>
