<h1>Sign In</h1>
<%= form_tag sessions_path, method: :post do %>
  <%= label_tag :username, "Username:" %>
  <%= text_field_tag :username %>
​
  <%= label_tag :password, "Password (secret):" %>
  <%= password_field_tag :password %>
​
  <%= submit_tag "Sign In", class: 'btn btn-success' %>
<% end %>
