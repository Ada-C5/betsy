<h2>Your orders:</h2>

<%@paid_sum = 0%>
<%@complete_sum = 0%>


<% if @order_items_paid %>
<table>
<tr><th>Orders waiting to be shipped:</th></tr>
  <%@order_items_paid.each do |item| %>
  <tr>
    <%= link_to Product.find(item.product_id).name, product_path(item.product_id)%>: <%= User.find_by(id: item.order.user_id).username%>
    <% @paid_sum +=(Product.find(item.product_id).price * item.quantity)%>Unit price: $<%= Product.find(item.product_id).price %>
    Subtotal: <%= Product.find(item.product_id).price * item.quantity%>
    <%= item.order.updated_at %> <%= item.order.status%>
  </tr>
  <%end%>
</table>
    Status "paid" total: $<%=@paid_sum%>
<%end%>

<% if @order_items_complete %>
  Complete orders:
  <%@order_items_complete.each do |item| %>
    <%= link_to Product.find(item.product_id).name, product_path(item.product_id)%>: <%= User.find_by(id: item.order.user_id).username%>
    <% @complete_sum += (Product.find(item.product_id).price * item.quantity)%>Unit price: $<%= Product.find(item.product_id).price %>
    Subtotal: <%= Product.find(item.product_id).price * item.quantity%>
    <%= item.order.updated_at %> <%= item.order.status%>
  <%end%>
Status "complete" total: $<%=@complete_sum%>
<%end%>
Total revenue: $<%= @complete_sum + @paid_sum%>
