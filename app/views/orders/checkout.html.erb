<h1>Complete your purchase:</h1>

<h2>To finish up, please provide all of the following information:</h2>
<%= params %>
<%= form_for @order do |f|%>


  <%= f.label :email%>
  <%= f.email_field :email %>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :name_on_credit_card %>
  <%= f.text_field :name_on_credit_card%>
  <%= f.label :credit_card_number %>
  <%= f.text_field :credit_card_number %>
  <%= f.label :credit_card_exp_date %>
  <%= f.text_field :credit_card_exp_date %>
  <%= f.label :credit_card_cvv %>
  <%= f.text_field :credit_card_cvv %>
  <%= f.label :billing_zip %>
  <%= f.text_field :billing_zip %>
  <%= f.hidden_field :status , :value => "Completed" %> <br>
  <%= f.submit "Complete Purchase" %>
  <% end %>
