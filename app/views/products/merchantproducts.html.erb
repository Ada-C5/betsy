<!-- merhcant viewing their account products -->
<div class="container">
  <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				  <!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src=<%= @user.profile_pic %> class="img-responsive" alt="">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= @user.username %>
					</div>
					<div class="profile-usertitle-job">
            <%= @user.email %>
					</div>
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
						<li>
							<%= link_to user_path(@user) do%>
							  <i class="glyphicon glyphicon-home"></i>
                Overview
              <% end %>
					  </li>
            <li class="active">
              <%= link_to user_products_path(@user) do%>
                <i class="glyphicon glyphicon-tags"></i>
                View My Products
                <% end %>
            </li>
            <div class = "bio"><strong>Biography:</strong> <%= @user.biography ? @user.biography : "Share something about yourself!"%></div>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>

      <%= render partial: 'account_products' %>
