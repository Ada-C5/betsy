<section class="product-details">
  <h2>
    <%= @product.name %>
  </h2>
  <%=image_tag("#{@product.image_url}")%>
  <p class="product-price">
    Price: <%= @product.price_in_dollars %>
  </p>
  <p class="in-stock">
    Quantity: <%= @product.quantity %>
  </p>
  <p>
    Description: <%= @product.description %>
  </p>

   <%=link_to "BUY NOW", cart_path(@product.id), method: :post %>


</section>

<section class="reviews">
  <h1 class="reviews-title">Reviews</h1>
  <p class="reviews-text">

    <% @reviews.each do |review| %>
      <p> <%= review.rating %><br>
        <%= review.review_text %></p>
      <%end%>

    <% if !current_user || current_user.id != @product.user_id %>
    
      <h1>Review this product</h1>
      <%=link_to "review product", new_product_review_path(@product.id)%>

    <% end %>