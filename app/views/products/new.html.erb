<pre><%= params %></pre>

<%= form_for @product do |f| %>

	<%= f.label :name %>
  <%= f.text_field :name %>
  <br>
​	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
  <%= f.label :price %>
  <%= f.number_field :price, step: 0.5 %>
  <br>
  <%= f.label :quantity %>
  <%= f.select(:quantity, options_for_select(1..10)) %>
  <br>
  <%= f.radio_button(:animal, "Cat") %>
  <%= f.label(:animal, "Cat", :value => 'Cat') %>
  <br>
  <%= f.label :category %>
  <%= f.select(:category, options_for_select(["Food", "Create a Category"])) %>
  <br>
  <%= f.label :'Photo URL' %>
  <%= f.url_field(:photo_url) %>

  <%= f.hidden_field :user_id, value: @user.id %>
​	<br>
  <%= f.submit class: 'btn btn-success'  %>
<% end %>

