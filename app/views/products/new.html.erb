<pre><%= params %></pre>

<%= form_for @product do |f| %>

	<%= f.label :name %>
  <%= f.text_field :name %>
  <br>
​	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
  <%= f.label :price %>
  <%= f.number_field :price, step: 0.5 %>
  <br>
  <%= f.label :quantity %>
  <%= f.select(:quantity, options_for_select(1..10)) %>
  <br>
  <%= f.label :category %>
  <%= f.select(:category, options_for_select(@category)) %>
  <br>
  <%= f.label :'Photo URL' %>
  <%= f.url_field(:photo_url) %>
  <% f.hidden_field :id, value: current_user.id %>
​	<br>
  <%= f.submit %>
<% end %>

