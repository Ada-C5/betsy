
<h1>New product</h1>

<%= form_for [@user, @product] do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :price %>
  <%= f.text_field :price %></p>

  <p><%= f.label :stock %>
  <%= f.text_field :stock %></p>

  <p><%= f.label :description %>
  <%= f.text_area :description %></p>

  <p><%= f.label :category %>
  <%= f.text_area :category, required: true %></p>

  <p><%= f.label :photo_url %>
  <%= f.text_field :photo_url %></p>

  <%= f.submit %>
  <% end %>
