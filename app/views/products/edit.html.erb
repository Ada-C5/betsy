<h1>Edit product</h1>

<%= form_for [@user, @product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category %>
  <%= f.text_area :category %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.check_box :status %>
  <%= f.label :status, "Retire this product" %>

  <%= f.hidden_field(:user_id, :value => @user.id) %>

  <%= f.submit %>
<% end %>
