<h2>Add a New Category:</h2>
<%= form_tag(controller: "products", action: "update_new_cats", method: "post") do %>
  <div class="form-group">
    <%= text_field_tag "new"%>
  </div>
  <%= submit_tag"Update", class: 'btn-btn-primary' %>
<% end %>

<h3>Existing Categories</h3>
<ul>
  <% @categories.each do |cat| %>
    <li>
    <%= cat.name %>
    </li>
  <%end%>
</ul>
