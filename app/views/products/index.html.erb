<h1>Products</h1>
<% if @category %>
  <h3>Filtered By <%= @category.titleize %></h3>
<% end %>
<section class="container col-xs-8">
  <article>
    <div>
      <% @products.each do |product| %>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="panel panel-default">
            <section class = "panel-body"><a href= "<%=product_path(product.id)%>" >
               <caption>
                 <div><%= image_tag(product.photo_url, :size => "240x250") %></div>
               </caption>
              </img></a>
            </section>
            <div class="panel-heading"><%=product.name%></div>
        </div>
      </div>
      <%end%>
    </div>
  </article>
</section>

<section>
  <% if current_user %>
  <li class=""><%= button_to "Add a new product!", new_user_product_path(current_user.id), :method => :get %></li>
  <% end %>
</section>
