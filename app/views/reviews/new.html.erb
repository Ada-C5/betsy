<h1>Welcome <%=@user.name if @user%> Review <%=@product.name%></h1>

<%= form_for @review do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <%= f.hidden_field :user_id, :value => @user.id if @user %>
  <%= f.label :review %>
  <%= f.text_field :review %>
  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5]%>
  <%= f.submit %>
<% end %>
