<h2> Add a Review for <%= @product.name %> </h2>

<p>Required: A rating between 1 (Hated It!) to 5 (Loved It!).</p>
<p>Optional: Your name and additional comments</p>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :rating %>:
  <%= f.select :rating, [1, 2, 3, 4, 5]%>

  <%= f.label "Comment" %>:
  <%= f.text_field :text %>

  <%= f.label :name %>:
  <%= f.text_field :name, :value => @username %>

  <%= f.hidden_field(:product_id, :value => @product.id)  %>

  <%= f.submit %>

<% end %>
