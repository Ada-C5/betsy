<h1> ADD YOUR REVIEW HERE! </h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>

  <%= f.label :rating %>:
  <%= f.select :rating, [1, 2, 3, 4, 5]%>

  <%= f.label :text %>:
  <%= f.text_field :text %>

  <%= f.hidden_field(:product_id, :value => @product.id)  %>

  <%= f.submit %>

<% end %>
