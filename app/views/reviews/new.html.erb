<h1>Welcome
  <%= current_user == nil ? "Guest user" : @user.name %>
  <br> Leave a review for <%= @product.name %></h1>

<%= form_for @review, url: product_reviews_path(@product.id) do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <%= f.hidden_field :user_id, :value => current_user == nil ? "Guest user" : @user.name %>
  <%= f.label :review %>
  <%= f.text_field :review %>
  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5]%>
  <%= f.submit %>
<% end %>
